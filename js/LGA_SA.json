{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "SA Solar Installation Statistics", "fontSize": 20},
  "width": 900,
  "height": 500,
  "projection": {
    "type": "mercator"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/lga-sa-solar-installations.csv"
  },
  "params": [
    {
      "name": "yearSelect",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2014,
        "max": 2022,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == yearSelect"
    },
    {
      "lookup": "LGA",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/LGA_2022_SA.json",
          "format": {
            "type": "topojson",
            "feature": "LGA_2022_AUST_GDA2020"
          }
        },
        "key": "properties.LGA_NAME22",
        "fields": ["geometry", "properties"]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5,
        "opacity": 0.3
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.8
      },
      "encoding": {
        "color": {
          "field": "Solar_Installation",
          "type": "quantitative",
          "title": "Solar Installations",
          "scale": {
            "type": "threshold",
            "domain": [10, 30, 60, 100],
            "range": ["#f7fbff", "#c6dbef", "#6baed6", "#2171b5", "#08306b"]
          },
          "legend": {
            "orient": "bottom",
            "titleLimit": 0,
            "gradientLength": 300
          }
        },
        "tooltip": [
          {
            "field": "LGA",
            "type": "nominal",
            "title": "Local Government Area"
          },
          {
            "field": "Solar_Installation",
            "type": "quantitative",
            "title": "Solar Installations",
            "format": ","
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null}
  }
}