{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 450,
  "height":400,
  "data": { 
    "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/capacity_per_capita.csv",
    "format": {
      "type": "csv",
      "parse": {"Year": "number", "Capacity Per Capita": "number"}
    }
  },
  "transform": [
    {"filter": "datum.Year == 2014 || datum.Year == 2022"}
  ],
  "layer": [
    {
      "mark": {"type": "line", "color": "lightgray"},
      "encoding": {
        "y": {"field": "State", "type": "nominal", "title": "State"},
        "x": {"field": "Capacity Per Capita", "type": "quantitative"},
        "detail": {"field": "State", "type": "nominal"}
      }
    },
    {
      "mark": {"type": "point", "filled": true, "size": 70},
      "encoding": {
        "y": {"field": "State", "type": "nominal","title": "State"},
        "x": {"field": "Capacity Per Capita", "type": "quantitative"},
        "color": {
          "field": "Year",
          "type": "nominal",
          "scale": {"range": ["gray", "red"]},
          "legend": {"title": "Year Of Date"}
        },
        "tooltip": [
          {"field": "State", "title": "State"},
          {"field": "Capacity Per Capita", "title": "Capacity per Capita", "format": ".1f"},
          {"field": "Year", "title": "Year"}
        ]
      }
    },

    {
      "data": {
        "values": [
          {
            "State": "TAS",
            "Capacity Per Capita": 3,
            "text": "TAS is the only state to decline \n between2014 and 2022"
          }
        ]
      },
      "mark": {
        "type": "text",
        "color": "red",
        "fontSize": 11,
        "fontWeight": "bold",
        "lineBreak": "\n"
      },
      "encoding": {
        "y": {"field": "State", "type": "nominal"},
        "x": {"field": "Capacity Per Capita", "type": "quantitative"},
        "text": {"field": "text"}
      }
    },

    {
      "data": {
        "values": [
          {
            "State": "NT",
            "Capacity Per Capita":10,
            "text": "NT has lowest solar capacity \n per Capita"
          }
        ]
      },
      "mark": {
        "type": "text",
        "color": "blue",
        "fontSize": 11,
        "fontWeight": "bold",
        "lineBreak": "\n"
      },
      "encoding": {
        "y": {"field": "State", "type": "nominal"},
        "x": {"field": "Capacity Per Capita", "type": "quantitative"},
        "text": {"field": "text"}
      }
    }
  ],

  "config": {
    "axis": {
      "grid": false
    },
    "view": {"stroke": "transparent"},
    "background": "transparent"
  }
}
