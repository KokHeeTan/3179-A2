{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 500,
  "projection": {"type": "equalEarth"},
  
  "params": [
    {
      "name": "month",
      "value": 1,
      "bind": {"input": "range", "min": 1, "max": 12, "step": 1}
    }
  ],

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/ne_50m_graticules_30.json",
        "format": {"type": "topojson", "feature": "ne_50m_graticules_30"}
      },
      "mark": {"type": "geoshape", "filled": false, "stroke": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/worldmap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/worldmap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KokHeeTan/3179-A2/refs/heads/main/data/sunshine%20hours%20for%20country.csv"
            },
            "key": "Country",
            "fields": ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"]
          }
        },
        {
          "calculate": "['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'][month-1]",
          "as": "SelectedMonth"
        },
        {
          "calculate": "datum[datum.SelectedMonth]",
          "as": "Sunlight"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "black"},
      "encoding": {
        "color": {
          "field": "Sunlight",
          "type": "quantitative",
          "title": "Sunlight Hours",
          "scale": {"scheme": "yelloworangered"}
        },
        "tooltip": [
          {"field": "properties.NAME", "title": "Country"},
          {"field": "SelectedMonth", "title": "Month"},
          {"field": "Sunlight", "title": "Sunlight Hours"}
        ]
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}